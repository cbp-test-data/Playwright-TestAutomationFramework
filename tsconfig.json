{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["tests/pages/*"],
      "@helpers/*": ["tests/helpers/*"],
      "@utils/*": ["tests/utils/*"],
      "@fixtures/*": ["tests/fixtures/*"],
      "@config/*": ["config/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["tests/**/*", "playwright.config.ts"],
  "exclude": ["node_modules"]
} 